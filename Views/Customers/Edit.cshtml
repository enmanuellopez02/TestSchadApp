@model Customer

@{
    ViewData["Title"] = "Edit";
    var customerTypes = ViewData["CustomerTypes"] as SelectList;
}

<section class="ip-box-container">
    <h2>Customer</h2>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="CustomerName" class="control-label"></label>
                    <input asp-for="CustomerName" class="form-control" required="required" />
                    <span asp-validation-for="CustomerName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address" class="control-label"></label>
                    <input asp-for="Address" class="form-control" required="required" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.CustomerType" class="control-label"></label>
                    <select asp-for="@Model.CustomerTypeId" asp-items="customerTypes" class="form-control"></select>
                    <span asp-validation-for="@Model.CustomerTypeId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Status" class="regular-checkbox" />
                    <label asp-for="Status" class="control-label"></label>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary dev-btn-block" />
                    <a asp-action="Index" class="btn btn-secondary dev-btn-block">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</section>